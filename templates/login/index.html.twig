{% extends 'base.html.twig' %}

{% block body %}
	{# --------------------------mobile--------------------------------- #}
<div class="d-flex d-md-none flex-column align-items-center vh-100">
{% if error %}
	<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
	<img src="{{ asset('build/images/portail-torii.png') }}" alt="torii cerisier en fleur" class="login-icon mb-5" loading="lazy"/>
		<form action="{{ path('login') }}" method="post">
			<div>
				<label class="textaccount" for="pseudo">Pseudo</label>
				<input class="form-control" type="text" id="pseudo" name="_username" value="{{ last_username }}"/>
			</div>
			<div>
				<label class="textaccount mt-2" for="password">Mot de passe</label>
				<input class="form-control" type="password" id="password" name="_password"/>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			{# <a class="link-underline link-underline-opacity-0 noaccount" href="{{ path('forgot_password_request') }}">Mot de passe oublié</a> #}
			<div class="d-flex justify-content-center">
				<button class="container btn button-login mt-4" type="submit">Se connecter</button>
			</div>
			<div class="mt-5">
				<a class="noaccount link-offset-2 link-underline" href="{{ path('register') }}">Pas encore inscrit? Rejoins-nous</a>
			</div>
		</form>
</div>

	{# ---------------------------- desktop----------------------------- #}
	<div class="d-none main d-md-block">
		<div class="login-desktop row row-cols">
			<img src="{{ asset('build/images/cherry-blossoms.jpg') }}" alt="photo de rue en cerisier" class="object-fit-cover back-picture col-md-5 p-0"/>
			<div class="col-md-7 p-0 ">
				<div class="login-desktop-cont m-auto h-100 w-100">
					{% if error %}
						<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					<div class="d-flex flex-column align-items-center justify-content-md-evenly">
						<form class="w-50" action="{{ path('login') }}" method="post">
							<div>
								<label class="textaccount mt-3 pt-3 textcenter" for="pseudo">Nom d'utilisateur</label>
								<input class="form-control" type="text" id="pseudo" name="_username" value="{{ last_username }}"/>
							</div>
							<div>
								<label class="textaccount mt-3" for="password">Mot de passe</label>
								<input class="form-control" type="password" id="password" name="_password"/>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

								{# <a class="link-offset-2 link-offset-3-hover link-underline-dark link-underline-opacity-0 link-underline-opacity-75-hover noaccount" href="{{ path('forgot_password_request') }}">Mot de passe oublié</a> #}

							<div class="d-flex justify-content-center">
								<button class="btn button-login mt-3" type="submit">Se connecter</button>
							</div>
							<div class="d-flex justify-content-center">
								<a class="noaccount link-offset-2 link-offset-3-hover link-underline-dark link-underline-opacity-0 link-underline-opacity-75-hover" href="{{ path('register') }}">Pas encore inscrit? Rejoins-nous</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
