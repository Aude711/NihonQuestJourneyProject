<form method="post" action="{{ path('recommendation_delete', {'id': recommendations.id}) }}">
    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Supprimer</button>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="staticBackdropLabel">Suppression de recommandation</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">Etes-vous s√ªr de supprimer cette recommandation
				{{ recommendations.title }}</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
				<button type="submit" class="btn btn-primary">Supprimer</button>
			</div>
		</div>
	</div>
</div>
<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recommendations.id) }}"/></form>
